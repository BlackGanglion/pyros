{
  "compilerOptions": {
    "noImplicitAny": false,
    "declaration": false,
    "target": "es6",
    "preserveConstEnums": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "built",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "module": "commonjs",
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "src": ["./src"]
    },
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2015", "es2016", "es2017"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./src/styles/**"],
}
